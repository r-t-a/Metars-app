<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="Metars.Views.Controls.AirportCell"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:Metars.Views.Controls">
    <ContentView.Content>

        <StackLayout
            Margin="8"
            HorizontalOptions="FillAndExpand"
            Orientation="Vertical"
            Spacing="4"
            VerticalOptions="FillAndExpand">

            <Label
                Margin="0,0,0,4"
                FontAttributes="Bold"
                FontSize="17"
                Text="{Binding Name}"
                TextColor="#3483F6"
                VerticalOptions="Start" />

            <Label
                FontAttributes="Bold"
                FontSize="14"
                LineBreakMode="WordWrap"
                Text="{Binding RAWMetar}"
                TextColor="Gray"
                VerticalOptions="Center" />

            <controls:Seperator Margin="0,0,-8,-9" />
        </StackLayout>
    </ContentView.Content>
</ContentView>
